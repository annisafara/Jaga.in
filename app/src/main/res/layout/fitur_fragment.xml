<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.nyoba.jagain.Fitur">


    <LinearLayout
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#30D7E2D6">

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageButton"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@drawable/rumahsakit" />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageButton2"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@drawable/puskesmas" />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageButton3"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@drawable/apotek" />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageButton3"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@drawable/ambulance" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="RumahSakit"
            android:textColor="#CDCF15"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Puskesmas"
            android:textColor="#CDCF15"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Apotek"
            android:textColor="#CDCF15"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Ambulance"
            android:textColor="#CDCF15"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="380dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="40dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingTop="11dp"
            android:text="Last Search"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/bg_r"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="430dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingTop="11dp"
        android:text="Rumah Sakit Pelita Harapan"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:background="@drawable/bg_r"
        android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="490dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingTop="11dp"
            android:text="Poliklinik IPB"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/bg_r"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="550dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingTop="11dp"
            android:text="Rumah Sakit Dramaga"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/bg_r"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>
